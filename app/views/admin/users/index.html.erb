<p style="color: green"><%= notice %></p>

<h1>Users</h1>

<div id="users">
  <% @users.each do |user| %>
    <%= render user %>
    <p>|
      <%= link_to "Ban this user", ban_admin_user_path(user), data: {
        turbo_method: :patch,
        turbo_confirm: "Are you sure you want to ban this user?"
        } %> |
      <%= link_to "Show this user", admin_user_url(user) %> |
    </p>
  <% end %>
</div>
